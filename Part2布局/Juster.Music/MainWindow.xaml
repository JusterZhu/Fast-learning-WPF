<Window x:Class="Juster.Music.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Juster.Music"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="账号：" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <TextBox Width="300" Height="30" Name="TxtA"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="密码："  HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <TextBox Name="TxtP" Width="300" Height="30"></TextBox>
        </StackPanel>
        <Button Grid.Row="2" Width="200" Height="30" Content="Login" Name="BtnLogin" Click="BtnLogin_Click"></Button>
    </Grid>
</Window>
